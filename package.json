{
  "name": "university-job-bank",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:production": "playwright test production-deployment.spec.ts",
    "test:integration": "playwright test integration-tests.spec.ts",
    "test:all": "npm run test:ci && npm run test:e2e",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true npm run build",
    "deploy:preview": "vercel",
    "deploy:production": "vercel --prod",
    "validate:production": "node scripts/validate-production.js",
    "validate:deployment": "node scripts/validate-deployment.js",
    "predeploy:production": "npm run validate:deployment",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.38.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
